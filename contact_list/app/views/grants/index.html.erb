<h1>Listing grants</h1>

<table>
  <tr>
    <th>Grant name</th>
    <th>Grant contrl</th>
    <th>Grant action</th>
    <th>Grant target</th>
    <th>Grant desc</th>
  </tr>

<% @grants.each do |grant| %>
  <tr>
    <td><%=h grant.grant_name %></td>
    <td><%=h grant.grant_contrl %></td>
    <td><%=h grant.grant_action %></td>
    <td><%=h grant.grant_target %></td>
    <td><%=h grant.grant_desc %></td>
    <td><%= link_to 'Show', grant %></td>
    <td><%= link_to 'Edit', edit_grant_path(grant) %></td>
    <td><%= link_to 'Destroy', grant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New grant', new_grant_path %>
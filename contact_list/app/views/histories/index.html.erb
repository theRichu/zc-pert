<h1>Listing histories</h1>

<table>
  <tr>
    <th>Staff</th>
    <th>Action</th>
    <th>Target</th>
  </tr>

<% @histories.each do |history| %>
  <tr>
    <td><%=h history.staff_id %></td>
    <td><%=h history.action %></td>
    <td><%=h history.target %></td>
    <td><%= link_to 'Show', history %></td>
    <td><%= link_to 'Edit', edit_history_path(history) %></td>
    <td><%= link_to 'Destroy', history, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New history', new_history_path %>
<h1>Editing enumeration</h1>
<% form_for(@clenum, :html=>{:id=>'edit_form'}) do |f| %>
  <%= f.error_messages %>
  <table>
    <tr>
      <td>
        <%= f.label :category_id %>
        <%= hidden_field_tag :ids, @clenum.id %>
      </td>
      <td><%= f.select(:category_id, options_category) %></td>
    </tr>
    <tr>
      <td><%= f.label :enum_text %></td>
      <td><%= f.text_field :enum_text %></td>
    </tr>
  </table>
<% end %>